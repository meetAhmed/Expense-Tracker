<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0dp" android:color="@color/medium_black_half" />
            <corners android:radius="10dp" />
            <solid android:color="@color/medium_black_half" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/medium_black" />
            <corners android:radius="10dp" />
            <solid android:color="@color/medium_black" />
        </shape>
    </item>
</selector>